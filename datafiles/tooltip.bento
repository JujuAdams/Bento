build BentoRectangle {
	step = fn {
		worldX = GetPointerX()
		worldY = GetPointerY() - height/2
	}

	layout = fn {
		size = [textElement.width + 40, textElement.height + 40]
		
		worldX = GetPointerX()
		worldY = GetPointerY() - height/2
	}

	textElement = build BentoText {
		label = "Wow! You found a tooltip!"

		layout = fn {
			xy = ["50%", "50%"]
		}
	}
}