build BentoRectangle {
	xywh = ["50%", "50%", "40%", "90%"]

	build BentoTextButton {
		originX = 0
		originY = 1
		xy = [0, "100%"]

		label = "<--"
		margin = 20

		eventClick = fn {
			LayerDeleteCurrent()
		}
	}

	build BentoBox {
		xywh = ["50%", "50%", "100%", "90%"]

		LayoutAsVerticalList("center", 20)

		build BentoButton {
			size = [200, 100]
		}

		build BentoTextButton {
			label "Second Button"
			margin = 20
		}

		build BentoSpriteButton {
			sprite = spr_logo
		}
	}
}